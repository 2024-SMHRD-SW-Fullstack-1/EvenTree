<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="정보 수정"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/etNick"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/edit_textcolor"
        android:backgroundTintMode="add"
        android:ems="10"
        android:hint=" 닉네임"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <EditText
        android:id="@+id/etPw"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_textcolor"
        android:backgroundTintMode="add"
        android:ems="10"
        android:hint=" 비밀번호"
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/prePw"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/prePw"
        app:layout_constraintTop_toBottomOf="@+id/prePw" />

    <EditText
        android:id="@+id/etPwConfirm"
        android:layout_width="230dp"
        android:layout_height="35dp"

        android:layout_marginTop="4dp"
        android:background="@drawable/edit_textcolor"
        android:backgroundTintMode="add"
        android:ems="10"
        android:hint=" 비밀번호 확인"
        android:inputType="textPassword"
        android:paddingEnd="40dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/etPw"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etPw"
        app:layout_constraintTop_toBottomOf="@+id/etPw" />

    <Button
        android:id="@+id/btnNickChange"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:backgroundTint="#f27272"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scrollbarSize="0dp"
        android:text="변경"
        android:textSize="14sp"
        app:cornerRadius="5dp"
        app:iconPadding="0dp"
        app:iconSize="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/etNick"
        app:layout_constraintStart_toEndOf="@+id/etNick"
        app:layout_constraintTop_toTopOf="@+id/etNick" />

    <EditText
        android:id="@+id/prePw"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_textcolor"
        android:ems="10"
        android:hint="현재 비밀번호"
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/etNick"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etNick"
        app:layout_constraintTop_toBottomOf="@+id/etNick" />

    <Button
        android:id="@+id/btnPwChange"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:backgroundTint="#f27272"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scrollbarSize="0dp"
        android:text="변경"
        android:textSize="14sp"
        app:cornerRadius="5dp"
        app:iconPadding="0dp"
        app:iconSize="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/etPwConfirm"
        app:layout_constraintStart_toEndOf="@+id/etPwConfirm"
        app:layout_constraintTop_toBottomOf="@+id/etPw"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="281dp"
        android:layout_height="283dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gucci_cat" />

</androidx.constraintlayout.widget.ConstraintLayout>